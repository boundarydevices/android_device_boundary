BOOT_PART_SIZE=20
RECOVERY_PART_SIZE=20
SYSTEM_PART_SIZE=1280
CACHE_PART_SIZE=512
VENDOR_PART_SIZE=64
MISC_PART_SIZE=2
CRYPT_PART_SIZE=2
FRP_PART_SIZE=1
METADATA_PART_SIZE=1

BOOT_PART_BEGIN=1
BOOT_PART_END=$(($BOOT_PART_BEGIN + $BOOT_PART_SIZE))
RECOVERY_PART_BEGIN=$BOOT_PART_END
RECOVERY_PART_END=$(($RECOVERY_PART_BEGIN + $RECOVERY_PART_SIZE))
SYSTEM_PART_BEGIN=$RECOVERY_PART_END
SYSTEM_PART_END=$(($SYSTEM_PART_BEGIN + $SYSTEM_PART_SIZE))
CACHE_PART_BEGIN=$SYSTEM_PART_END
CACHE_PART_END=$(($CACHE_PART_BEGIN + $CACHE_PART_SIZE))
VENDOR_PART_BEGIN=$CACHE_PART_END
VENDOR_PART_END=$(($VENDOR_PART_BEGIN + $VENDOR_PART_SIZE))
MISC_PART_BEGIN=$VENDOR_PART_END
MISC_PART_END=$(($MISC_PART_BEGIN + $MISC_PART_SIZE))
CRYPT_PART_BEGIN=$MISC_PART_END
CRYPT_PART_END=$(($CRYPT_PART_BEGIN + $CRYPT_PART_SIZE))
FRP_PART_BEGIN=$CRYPT_PART_END
FRP_PART_END=$(($FRP_PART_BEGIN + $FRP_PART_SIZE))
METADATA_PART_BEGIN=$FRP_PART_END
METADATA_PART_END=$(($METADATA_PART_BEGIN + $METADATA_PART_SIZE))
DATA_PART_BEGIN=$METADATA_PART_END
DATA_PART_END="100%"

export MKPART_COMMAND="\
mkpart boot $BOOT_PART_BEGIN $BOOT_PART_END \
mkpart recovery $RECOVERY_PART_BEGIN $RECOVERY_PART_END \
mkpart system $SYSTEM_PART_BEGIN $SYSTEM_PART_END \
mkpart cache $CACHE_PART_BEGIN $CACHE_PART_END \
mkpart vendor $VENDOR_PART_BEGIN $VENDOR_PART_END \
mkpart misc $MISC_PART_BEGIN $MISC_PART_END \
mkpart crypt $CRYPT_PART_BEGIN $CRYPT_PART_END \
mkpart frp $FRP_PART_BEGIN $FRP_PART_END \
mkpart metadata $METADATA_PART_BEGIN $METADATA_PART_END \
mkpart data $DATA_PART_BEGIN $DATA_PART_END \
"
